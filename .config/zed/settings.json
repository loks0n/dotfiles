// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "shell": {
      "program": "fish",
    },
  },
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "file_types": {
    "Helm": [
      "**/helm/**/.yaml",
      "**/helm/**/.yml",
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/values*.yaml",
    ],
    "GitHub Actions": [".github/workflows/*.yml", ".github/workflows/*.yaml"],
  },
  "languages": {
    "PHP": {
      "tab_size": 4,
      "hard_tabs": false,
      "format_on_save": "off",
      "language_servers": ["intelephense", "!phpactor", "..."],
    },
    "JSON": {
      "format_on_save": "off",
    },
  },
  "lsp": {
    "intelephense": {
      "settings": {
        "stubs": [
          "Core",
          "standard",
          "SPL",
          "Reflection",
          "date",
          "json",
          "pcre",
          "hash",
          "filter",
          "ctype",
          "mbstring",
          "mysqli",
          "PDO",
          "pgsql",
          "xmlwriter",
          "sqlite3",
          "mongodb",
          "redis",
          "random",
          "curl",
          "openssl",
          "session",
          "gd",
          "imagick",
          "xml",
          "dom",
          "SimpleXML",
          "zip",
          "fileinfo",
          "sockets",
          "yaml",
          "maxminddb",
        ],
      },
    },
  },
}
